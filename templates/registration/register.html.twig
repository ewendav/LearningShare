{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="registration-container">
        <div id="section-registration">
            <h1 class="page-title">Inscription</h1>

            {% if form_errors(registrationForm) %}
                <div class="error-message">{{ form_errors(registrationForm) }}</div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'form-login', 'enctype': 'multipart/form-data'}}) }}
            <div style="margin-top:3rem;" class="vertical-display">

                <div class="horizontal-display">
                    <div class="input-label-display">
                        <label for="firstName">Prénom</label>
                        {{ form_widget(registrationForm.firstname, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre prénom'
                            }
                        }) }}
                    </div>

                    <div class="input-label-display">
                        <label for="lastName">Nom</label>
                        {{ form_widget(registrationForm.lastname, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre nom'
                            }
                        }) }}
                    </div>
                </div>

                <div class="horizontal-display">
                    <div class="input-label-display">
                        <label for="email">Email</label>
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre email'
                            }
                        }) }}
                    </div>

                    <div class="input-label-display">
                        <label for="phone">Téléphone</label>
                        {{ form_widget(registrationForm.phone, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre numéro de téléphone'
                            }
                        }) }}
                    </div>
                </div>

                <div class="input-label-display">
                    <label for="biography">Biographie</label>
                    {{ form_widget(registrationForm.biography, {
                        'attr': {
                            'class': 'input-goofy',
                            'placeholder': 'Entrez votre biographie',
                            'rows': '3'
                        }
                    }) }}
                </div>

                <div class="input-label-display">
                    <label for="avatar">Avatar</label>
                    {{ form_widget(registrationForm.avatar, {
                        'attr': {
                            'class': 'input-goofy',
                            'accept': 'image/*'
                        }
                    }) }}
                </div>

                <div class="input-label-display">
                    <label for="password">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'input-goofy',
                            'placeholder': 'Entrez votre mot de passe'
                        }
                    }) }}
                </div>

                <div class="input-label-display">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                </div>

                <div class="horizontal-display">
                    <button class="form-button green-bg" type="submit">Inscription</button>
                </div>

                <div class="create-account-prompt">
                    <p><a href="/login">Déjà un compte ?</a></p>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </section>

{% endblock %}