{% extends 'base.html.twig' %}

{% block title %}{{ 'Inscription'|trans }}{% endblock %}

{% block body %}

    <section class="registration-container">
        <div id="section-registration">
            <h1 class="page-title">{{ 'Inscription'|trans }}</h1>

            {% if form_errors(registrationForm) %}
                <div class="error-message">{{ form_errors(registrationForm) }}</div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'form-login', 'enctype': 'multipart/form-data'}}) }}
            <div style="margin-top:3rem;" class="vertical-display">

                <div class="horizontal-display">
                    <div class="input-label-display">
                        <label for="firstName">{{ 'Prénom'|trans }}</label>
                        {{ form_widget(registrationForm.firstname, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre prénom'|trans
                            }
                        }) }}
                        {% if form_errors(registrationForm.firstname) %}
                            <div class="error-message">{{ form_errors(registrationForm.firstname) }}</div>
                        {% endif %}
                    </div>

                    <div class="input-label-display">
                        <label for="lastName">{{ 'Nom'|trans }}</label>
                        {{ form_widget(registrationForm.lastname, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre nom'|trans
                            }
                        }) }}
                        {% if form_errors(registrationForm.lastname) %}
                            <div class="error-message">{{ form_errors(registrationForm.lastname) }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="horizontal-display">
                    <div class="input-label-display">
                        <label for="email">{{ 'Email'|trans }}</label>
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre email'|trans
                            }
                        }) }}
                        {% if form_errors(registrationForm.email) %}
                            <div class="error-message">{{ form_errors(registrationForm.email) }}</div>
                        {% endif %}
                    </div>

                    <div class="input-label-display">
                        <label for="phone">{{ 'Téléphone'|trans }}</label>
                        {{ form_widget(registrationForm.phone, {
                            'attr': {
                                'class': 'input-goofy',
                                'placeholder': 'Entrez votre numéro de téléphone'|trans
                            }
                        }) }}
                        {% if form_errors(registrationForm.phone) %}
                            <div class="error-message">{{ form_errors(registrationForm.phone) }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="input-label-display">
                    <label for="biography">{{ 'Biographie'|trans }}</label>
                    {{ form_widget(registrationForm.biography, {
                        'attr': {
                            'class': 'input-goofy',
                            'placeholder': 'Entrez votre biographie'|trans,
                            'rows': '3'
                        }
                    }) }}
                    {% if form_errors(registrationForm.biography) %}
                        <div class="error-message">{{ form_errors(registrationForm.biography) }}</div>
                    {% endif %}
                </div>

                <div class="input-label-display">
                    <label for="avatar">{{ 'Avatar'|trans }}</label>
                    {{ form_widget(registrationForm.avatar, {
                        'attr': {
                            'class': 'input-goofy',
                            'accept': 'image/*'
                        }
                    }) }}
                    {% if form_errors(registrationForm.avatar) %}
                        <div class="error-message">{{ form_errors(registrationForm.avatar) }}</div>
                    {% endif %}
                </div>

                <div class="input-label-display">
                    <label for="password">{{ 'Mot de passe'|trans }}</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'input-goofy',
                            'placeholder': 'Entrez votre mot de passe'|trans
                        }
                    }) }}
                </div>
                {% if form_errors(registrationForm.plainPassword) %}
                    <div class="error-message">{{ form_errors(registrationForm.plainPassword) }}</div>
                {% endif %}

                <div class="input-label-display">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                    {% if form_errors(registrationForm.agreeTerms) %}
                        <div class="error-message">{{ form_errors(registrationForm.agreeTerms) }}</div>
                    {% endif %}
                </div>

                <div class="horizontal-display">
                    <button class="form-button green-bg" type="submit">{{ 'Inscription'|trans }}</button>
                </div>

                <div class="create-account-prompt">
                    <p><a href="/login">{{ 'Déjà un compte ?'|trans }}</a></p>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </section>

{% endblock %}
